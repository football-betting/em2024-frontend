---
import Layout from "../../layouts/Layout.astro";

const metaTitle = 'Passwort vergessen';

const user = Astro.locals.user;
if (user) {
    return Astro.redirect("/");
}

---

<Layout title={metaTitle}>

    <div class="flex flex-col md:pt-52 pt-20 justify-center items-center">
        <div class="text-indigo-600 text-4xl font-bold text-center pb-3 mx-auto">
            Passwort vergessen
        </div>

        <div class="mt-1 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" action="/api/auth/password-forget" method="POST">
                <div>
                    <label for="email" class="block text-sm font-medium leading-6 dark:text-gray-200">Email</label>
                    <div class="mt-2">
                        <input id="email" name="email" type="email" autocomplete="email" required class="pl-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                </div>

                <div id="submit">
                    <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Password zur√ºcksetzen</button>
                </div>
            </form>
        </div>
    </div>

</Layout>

<script>
    const form = document.querySelector("form") as HTMLFormElement;
    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        // @ts-ignore
        const response = await fetch("/api/auth/password-forget", {
            method: "POST",
            body: formData,
        });

        if (response.redirected) {
            window.location.assign(response.url);
        } else {
            const submitDiv = document.getElementById('submit')
            const errorMessage = document.createElement('div');
            errorMessage.id = 'errorMessage'
            errorMessage.className = 'text-red-400 font-bold'

            errorMessage.innerHTML = await response.text();

            const existingErrorMessage = document.getElementById('errorMessage')
            if (existingErrorMessage != undefined) {
                submitDiv.removeChild(existingErrorMessage)
            }

            submitDiv.appendChild(errorMessage)
        }
    });
</script>
