---
<AdminLayout title="Admin Dashboard">
    <div class="flex flex-col md:pt-20 pt-12 justify-center items-center mb-20">
        <ul role="list" class="grid grid-cols-1 gap-12 sm:grid-cols-2 xl:grid-cols-3">
            {
                list.map((link) => (
                        <li class="p-8 col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow">
                            <a href={link.href}>
                                <div class="flex flex-1 flex-col p-8">
                                    <Fragment set:html={link.svg}/>
                                </div>
                                <span class="mb-5 inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">{link.title}</span>
                            </a>
                        </li>
                ))
            }
        </ul>
    </div>
</AdminLayout>
