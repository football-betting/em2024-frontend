---
export interface Props {
    iso: string;
}

let { iso } = Astro.props as Props;

const countryMapping = {
    ALB: "ALB",
    BEL: "BEL",
    DEU: "GER",
    DNK: "DEN",
    ENG: "ENG",
    FRA: "FRA",
    GEO: "GEO",
    ITA: "ITA",
    HRV: "CRO",
    NLD: "NED",
    AUT: "AUT",
    POL: "POL",
    PRT: "POR",
    ROU: "ROU",
    SCO: "SCO",
    CHE: "SUI",
    SRB: "SRB",
    SVK: "SVK",
    SVN: "SVN",
    ESP: "ESP",
    CZE: "CZE",
    TUR: "TUR",
    UKR: "UKR",
    HUN: "HUN"
};
if (countryMapping.hasOwnProperty(iso)) {
    iso = countryMapping[iso];
}

---

<div class="inline-block w-8 align-bottom ml-4 mr-2">
    <img class="inline-block w-6 h-6" src={`/svg/${iso}.svg`}/>
</div>
